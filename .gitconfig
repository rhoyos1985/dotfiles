[color]
        diff = auto
        status = auto
        branch = auto
	ui = true

[color "diff"]
        meta = yellow

[alias]
        st = status
        ci = commit
        br = branch
        co = checkout
        df = diff --word-diff=color
        lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr - %cn)%Creset' --abbrev-commit --date=relative
        sub = submodule update
        unstage = reset HEAD
        cm = commit -m
[branch]
        autosetupmerge = true
        autosetuprebase = always
[core]
        whitespace = trailing-space,space-before-tab
        filemode = false
        editor = vim
	excludesfile = /home/tille/.gitignore_global
[rerere]
        enabled = 1
[push]
        default = tracking
[diff]
        mnemonicprefix = true
[merge]
        stat = true

[pager]
        diff = less -r
        log = less
        show = less -r
[user]
	email = richard@dentalzon.com
	name = Richard Hoyos
